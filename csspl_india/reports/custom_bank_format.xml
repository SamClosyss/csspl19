    <record id="excel_class_wizard" model="ir.ui.view">
     <field name="name">custom.excel.class.wizard</field>
     <field name="model">custom.excel.class</field>
     <field name="arch" type="xml">
        <form string="Excel Report">
           <div>
               <group>
                    <field name="bank_select" required="1"/>
                </group>
              <group>
                 <field name="summary_data" invisible="1"/>
                 <field name="file_name" filename="summary_data" />
              </group>
           </div>
           <footer>
              <button string="Generate Report"
                           class="btn-primary"
                           name="generate_xlsx_report"
                           type="object"/>
              <button string="Cancel"
                           class="btn-default"
                           special="cancel" />
           </footer>
        </form>
     </field>
  </record>

    <record id="action_advance_xlwt" model="ir.actions.act_window">
     <field name="name">Excel Report</field>
     <field name="type">ir.actions.act_window</field>
     <field name="res_model">custom.excel.class</field>
     <field name="view_mode">form</field>
     <field name="view_id" ref="csspl_india.excel_class_wizard"/>
     <field name="target">new</field>
  </record>

        <!--    Merged PDF-->

    <record id="excel_class_merge_wizard" model="ir.ui.view">
        <field name="name">custom.excel.merge.wizard</field>
        <field name="model">excel.merge.wizard</field>
        <field name="arch" type="xml">
            <form string="Excel Report Merged">
                <div>
                    <group>
                        <field name="summary_data" invisible="1"/>
                        <field name="file_name" filename="summary_data"/>
                    </group>
                </div>
                <footer>
                    <button string="Generate Report"
                            class="btn-primary"
                            name="generate_xlsx_report"
                            type="object"/>
                    <button string="Cancel"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_advance_merge_xlwt" model="ir.actions.act_window">
        <field name="name">Excel Report Merged</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">excel.merge.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="csspl_india.excel_class_merge_wizard"/>
        <field name="target">new</field>
    </record>


</odoo>