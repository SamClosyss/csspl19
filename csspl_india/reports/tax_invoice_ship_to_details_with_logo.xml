<odoo>
    <record id="paperformat_css_invoice" model="report.paperformat">
        <field name="name">Tax Invoice</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">15</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">16</field>
        <field name="dpi">90</field>
    </record>
    <record id="taxes_invoice_report_bms" model="ir.actions.report">
        <field name="name">CSS Invoice with logo</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">csspl_india.taxes_invoice_css</field>
        <field name="report_file">csspl_india.taxes_invoice_css</field>
