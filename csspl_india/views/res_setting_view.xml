<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="res_config__settings_inherit_view_form_sales" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.view.form.sales</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="41"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='default_accounts']/div[2]/div[2]" position="inside">
                <div class="row mt8">
                    <label for="bonus_account_id" class="col-lg-5 o_light_label"/>
                    <field name="bonus_account_id" force_save="1"/>
                </div>
                <div class="row mt8">
                    <label for="salary_account_id" class="col-lg-5 o_light_label"/>
                    <field name="salary_account_id" force_save="1"/>
                </div>

                <div class="row mt8">
                    <label for="loans_account_id" class="col-lg-5 o_light_label"/>
                    <field name="loans_account_id" options="{'no_edit': True, 'no_create': True, 'no_open': True}"
                           force_save="1"/>
                </div>

                <div class="row mt8">
                    <label for="advances_account_id" class="col-lg-5 o_light_label"/>
                    <field name="advances_account_id" options="{'no_edit': True, 'no_create': True, 'no_open': True}"
                           force_save="1"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>