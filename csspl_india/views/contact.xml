<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Added Custom Field on res.partner Form  -->
    <record id="customer_seq_form_inherit" model="ir.ui.view">
        <field name="name">customer.seq.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <!--                Replacing vat with GST-->
            <xpath expr="//field[@name='vat']" position="replace">
                <field name="vat" string="GST No" placeholder="e.g. BE0477472701" readonly="parent_id != False"/>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="cancelled_cheque" filename="check_file_name" force_save="1"/>
                <field name="check_file_name" invisible="1" force_save="1"/>
                <field name="pan_card" filename="pan_file_name" force_save="1"/>
                <field name="pan_file_name" invisible="1" force_save="1"/>
                <field name="gst_doc" filename="gst_doc_name" force_save="1"/>
                <field name="gst_doc_name" invisible="1" force_save="1"/>

            </xpath>

            <!--            <xpath expr="//field[@name='child_ids']/form/sheet/group/group[2]/field[@name='mobile']" position="after">-->
            <!--                <field name="vat" string="GST No"/>-->
            <!--            </xpath>-->

            <!--             <xpath expr="//field[@name='is_gstin']" position="after">-->
            <!--                <field name="code" string="Code"/>-->
            <!--            </xpath>-->
        </field>
    </record>

