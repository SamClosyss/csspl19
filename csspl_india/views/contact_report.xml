<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="contact_report_form_view" model="ir.ui.view">
        <field name="name">contact_report_form_view</field>
        <field name="model">contact.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="account_type" widget="radio" options="{'horizontal': true}"/>
                        <group>
                            <field name="start_date"/>
                            <field name="company_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                            <field name="chart_account_id" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_report_of_contact" type="object" string="Report" class="btn btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_contact_report" model="ir.actions.act_window">
        <field name="name">Debtor Creditor Excel</field>
        <field name="res_model">contact.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="contact_report_generator" name="Debtor Creditor Excel" action="action_contact_report"
              parent="account.menu_finance_reports"/>

</odoo>