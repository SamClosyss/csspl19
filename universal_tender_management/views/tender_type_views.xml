<odoo>

    <record id="action_tender_type" model="ir.actions.act_window">
        <field name="name">Tender Types</field>
        <field name="res_model">tender.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_tender_type_tree" model="ir.ui.view">
        <field name="model">tender.type</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

</odoo>
