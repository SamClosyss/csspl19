<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="inherited_payment_account_form_contra_entries" model="ir.ui.view">
        <field name="name">inherited_payment_account_form_contra_entries</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group1']/field[@name='payment_type']" position="before">
                <field name="is_internal_transfer"/>
            </xpath>
            <xpath expr="//group[@name='group2']" position="inside">
                <field name="destination_journal_id"
                       placeholder="e.g. Cash"
                       context="{'default_partner_id': partner_id}"
                       invisible="not is_internal_transfer"
                       readonly="state != 'draft'"
                       required="is_internal_transfer and state == 'draft'"/>
            </xpath>
            <xpath position="attributes" expr="//field[@name='partner_id']">
                <attribute name="invisible">partner_type != 'customer' or is_internal_transfer</attribute>
            </xpath>
        </field>
    </record>

    <record id="action_contra_entries" model="ir.actions.act_window">
        <field name="name">Contra Entries</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.payment</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_internal_transfer', '=', True)]</field>
        <field name="context">{'default_is_internal_transfer':True,'default_payment_type': 'outbound',}</field>
    </record>

    <menuitem id="report_contra_entries" name="Contra Entries" action="action_contra_entries"
              parent="account.menu_finance_entries"/>

</odoo>